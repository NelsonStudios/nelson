<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
	<head>
		<script src="https://www.google.com/recaptcha/api.js" src_type="url" />
	</head>
    <body>
        <referenceBlock name="after.body.start">
            <block class="Serfe\AskAnExpert\Block\Contactblock" name="popup" after="-" template="Serfe_AskAnExpert::popup.phtml"/>
        </referenceBlock>
        <referenceBlock name="askanexpert-link" remove="true"/>
        <referenceBlock name="footer_links" >
            <block class="Magento\Framework\View\Element\Html\Link\Current" name="askanexpert-link2">
                <arguments>
                    <argument name="label" xsi:type="string">Ask An Expert</argument>
                    <argument name="path" xsi:type="helper" helper="Serfe\AskAnExpert\Helper\Data::getFrontName"/>
                </arguments>
            </block>
        </referenceBlock>
    </body> 
</page>